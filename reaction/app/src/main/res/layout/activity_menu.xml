<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Settings" />

    <Button
        android:id="@+id/btnStamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSettings"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/btnSettings"
        android:text="Stamina" />

    <Button
        android:id="@+id/btnSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStamina"
        android:layout_alignStart="@+id/btnStamina"
        android:layout_marginBottom="50dp"
        android:text="Speed" />

    <Button
        android:id="@+id/btnScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSettings"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/btnSettings"
        android:text="Score" />

    <Button
        android:id="@+id/btnAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnScore"
        android:layout_alignStart="@+id/btnScore"
        android:layout_marginBottom="50dp"
        android:text="Average" />
</RelativeLayout>